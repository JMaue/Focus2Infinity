@page "/imagecard"
@using System.Drawing
@using System.Drawing.Imaging
@using System.IO

<div class="float-right">
  <a href=@details>
    <img src=@ImgTbn class="img-fluid" style="margin: 3px; border: 1px solid white; border-radius: 10px;" />
  </a>
</div>

@code {
  [Parameter]
  public string Topic { get; set; }

  [Parameter]
  public string Src { get; set; }

  string ImgFile => Path.Combine("img", Topic, Src);
  string ImgTbn => Path.Combine("img", Topic, $"Tbn_{Src}");
  string details => $"/imagedetails/{Topic}/{Src}";
}


